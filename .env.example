# Discord Bot Configuration
DISCORD_TOKEN=your_bot_token_here
CLIENT_ID=your_client_id_here

# Database Configuration (REQUIRED)
DATABASE_URL=postgresql://username:password@localhost:5432/database_name

# Economy System Configuration
BASE_INCOME_RATE=100
CP_MULTIPLIER=0.1
MAX_STORED_HOURS=24
PULL_COST=1000

# Combat & Raid Settings
BERRY_STEAL_MIN=0.10
BERRY_STEAL_MAX=0.50
FRUIT_STEAL_CHANCE=0.15
MAX_FRUITS_STOLEN=3
MIN_BERRIES_TO_RAID=100

# CP Milestone Bonuses
CP_50K_BONUS=500
CP_100K_BONUS=1000
CP_200K_BONUS=2000

# Logging Configuration (optional)
LOG_CHANNEL_ID=your_log_channel_id_here
ENABLE_ECONOMY_LOGS=true
ENABLE_BERRY_LOGS=true
ENABLE_RAID_LOGS=true
ENABLE_PULL_LOGS=true
ENABLE_DAILY_SUMMARIES=false

# Development Settings
NODE_ENV=development

# Database Pool Configuration (optional)
DB_MAX_CONNECTIONS=20
DB_IDLE_TIMEOUT=30000
DB_CONNECTION_TIMEOUT=2000

# Security Settings
JWT_SECRET=your_jwt_secret_here
ENCRYPTION_KEY=your_encryption_key_here

# Rate Limiting
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX=100

# Cache Configuration
REDIS_URL=redis://localhost:6379
ENABLE_CACHE=false

# Monitoring
ENABLE_METRICS=false
METRICS_PORT=3001

# Backup Configuration
BACKUP_INTERVAL=86400000
BACKUP_RETENTION_DAYS=7

# Error Reporting
SENTRY_DSN=your_sentry_dsn_here
ENABLE_ERROR_REPORTING=false
